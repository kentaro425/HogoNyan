<%= render 'header' %>
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <h5 class="d-flex justify-content-center">新規投稿を作成</h5>
      <%= form_with model: @post, local: true  do |f| %>
        <div class="form-group">
          <%= f.label :post_images, '画像' %><br>
          <%= f.file_field :post_images, multiple: true %>
        </div>
        <div class="form-group">
          <%= f.label :body, '本文' %><br>
          <%= f.text_area :body, rows: 6, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :name,'タグ (,で区切ると複数タグ登録できます)' %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group d-flex justify-content-center">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
