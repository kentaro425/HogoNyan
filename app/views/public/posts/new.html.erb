<%= render 'header' %>
<div class="container">
  <div class="row">
    <div class="col-4 mx-auto">
      <h3>新規投稿を作成</h3>
      <%= form_with model: @post, local: true  do |f| %>
        <div class="form-group">
          <%= f.label :post_images, '画像' %><br>
          <%= f.file_field :post_images, multiple: true %>
        </div>
        <div class="form-group">
          <%= f.label :body, '本文' %><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.label :name,'タグ (,で区切ると複数タグ登録できます)' %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit "登録する" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
