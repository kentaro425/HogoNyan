<div class="container mt-5">
  <div class="row">
    <div class="col-4 mx-auto ">
      <div class="row d-flex justify-content-center">
        <h4>会員登録</h4>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row my-4">
          <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
        </div>
        <div class="row my-4">
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="row my-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="row my-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）", class: "form-control" %>
        </div>
        <div class="row my-4">
          <%= f.submit "新規登録", class: "btn btn-warning btn-block" %>
        </div>
      <% end %>
      <div class="row d-flex justify-content-center">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>



