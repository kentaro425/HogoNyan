<div class="comments">
  <% if post.comments.present? %>
    <p>コメント件数：<%= post.comments.count %></p>
    <% post.comments.each do |comment| %>
      <%= time_ago_in_words(comment.created_at).upcase %><%= comment.user.nickname %><%= comment.content %><br>
    <% end %>
  <% else %>
    <p>コメントはまだありません</p>
  <% end %>
</div>
