<% visiter = notification.visiter %>
<% visited = notification.visited %>
<div class="col-md-4 ml-auto">
  <%= link_to "すべて削除", destroy_all_user_notifications_path(visited), method: :patch, class: "btn btn-danger" %>
</div>
<div class="col-md-6 mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to sns_home_user_path(visiter) do %>
        <%#= image_tag avatar_url(visitor).to_s, class: "icon_mini" %>
        <strong>
          <%= visiter.nickname %>
        </strong>
      <% end %>
      さんが
    </span>

    <% case notification.action %>
      <% when 'follow' then %>
        あなたをフォローしました
      <% when 'favorite' then %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
        にいいねしました
      <% when 'comment' then %>
        <% if notification.post.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to post_path(notification.post) do %>
              <%#= image_tag avatar_url(notification.post.user).to_s, class: "icon_mini" %>
              <strong>
                <%= notification.post.user.nickname %>さんの投稿
              </strong>
            <% end %>
          </span>
        <% end %>
          にコメントしました"
        <p class="text-muted mb-0">
          <%= Comment.find_by(id: notification.comment_id)&.content %>
        </p>

    <% end %>
    <div class="small text-muted text-right">
      <%= time_ago_in_words(notification.created_at).upcase %>
    </div>
    <div>
      <%= link_to "削除", user_notification_path(visited, notification), method: :patch, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
