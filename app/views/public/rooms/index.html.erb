<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h5 class="p3">取引一覧</h5>
        <table class="table">
          <tr>
            <therd>
              <th colspan=4></th>
            </therd>
          </tr>
          <% @another_user_rooms.each do |room| %>
          <tr>
            <td class="align-middle">
              <% if room.request.request_images.count > 0 %>
                <%= image_tag room.request.request_images.first, size: "100x100", class: "img-thumbnail" %>
              <% end %>
            </td>
            <td class="align-middle">
              <%= link_to room_path(room.room) do %>
                <%= room.request.title %>
              <% end %>
            </td>
            <td class="align-middle"><%= room.user.nickname %></td>
            <td class="align-middle text-nowrap">
              <% if room.room.chats.present? %>
                <%= Chat.find_by(id: room.room.chat_ids.last).content %>
              <% else %>
                <p>メッセージはまだありません</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>