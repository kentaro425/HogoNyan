<h1>Public::Users#sns_favorites</h1>
<p>Find me in app/views/public/users/sns_favorites.html.erb</p>
<%= render 'public/posts/header' %>
<div class="container">
  <div class="row">
    <div class="col-3 offset-2">
      <%= @user.sns_image %>
    </div>
    <div class="col-5">
      <div class="row">
        <div class="col-6 pl-0">
          <%= @user.nickname %>
        </div>
        <div class="col-6">
          <%= link_to "プロフィールを編集", sns_edit_user_path(@user), class: "btn btn-outline-secondary btn-sm" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="mr-4">
          投稿 <%= @user.posts.count %> 件
        </div>
        <div class="mr-4">
          フォロワー <%= @user.followers.count %> 人
        </div>
        <div>
          フォロー中 <%= @user.followings.count %> 人
        </div>
      </div>
      <div class="row mt-3">
        <%= @user.profile %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <% @favorite_posts.each do |post| %>
        <div class="col-4">
          <%= link_to sns_home_user_path(post.user) do %>
            <% if post.post_images.count > 0 %>
              <%= image_tag post.post_images.first, class: "img-fluid" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>