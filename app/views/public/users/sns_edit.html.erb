<%= render 'public/posts/header' %>
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <h5 class="d-flex justify-content-center">ユーザー情報編集</h5>
      <%= form_with model: @user, url: sns_update_user_path, method: :patch, local: true  do |f| %>
        <div class="form-group">
          <%= f.label :sns_image, 'プロフィール写真を変更' %>
          <%= f.file_field :sns_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :nickname, 'ニックネーム' %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile, '募集者プロフィール' %>
          <%= f.text_area :profile, class: "form-control" %>
        </div>
        <div class="form-group  d-flex justify-content-center">
          <%= f.submit "更新する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>