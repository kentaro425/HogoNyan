<div class="container my-5">
  <div class="row">
    <h3 class="p-3"><span class="header">会員一覧</span></h3>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
            <th>投稿ステータス</th>
            <th>退会ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%=link_to admin_user_path(user.id), class: "text-dark" do %>
                  <%= user.first_name %> <%= user.last_name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.status_i18n %></td>
              <% if user.is_active == false %>
                <td class="text-secondary">無効</td>
              <% else %>
                <td class="text-success">有効</td>
              <% end %>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <div>
     <%= paginate @users %>
    </div>
  </div>
</div>