<% notifications = @notifications.where.not(checked: true) %>
<% if notifications.exists? %>
  <div class="col-md-4 mx-auto d-flex justify-content-end align-items-center">
    <%= link_to "すべて削除", destroy_all_admin_notifications_path, method: :patch, class: "btn btn-outline-danger  btn-sm" %>
  </div>
  <% notifications.each do |notification| %>
    <% visiter = notification.visiter %>
    <div class="col-xl-3 col-lg-5 col-sm-8 mx-auto">
      <div class="form-inline mb-3 d-flex justify-content-end align-items-center">
        <span>
          <%= link_to admin_user_path(visiter) do %>
            <%#= image_tag avatar_url(visitor).to_s, class: "icon_mini" %>
            <strong>
              <%= visiter.last_name %><%= visiter.first_name %>
            </strong>
          <% end %>
          さんが
        </span>

        <% case notification.action %>
          <% when 'user_status' then %>
            募集者ステータスを変更しました。
          <% when 'complete' then %>
            <% visited = notification.visited %>
            <%= link_to admin_user_path(visited) do %>
              <strong>
                <%= visited.last_name %><%= visited.first_name %>
              </strong>
            <% end %>
            さんとの
            <%= link_to "取引", notification.request %>
            を完了しました。
        <% end %>
        <div class="small text-muted text-right">
          <%= time_ago_in_words(notification.created_at).upcase %>
        </div>
        <div>
          <%= link_to admin_notification_path(notification), method: :patch, class: "btn-sm btn-outline-danger" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="d-flex justify-content-center align-items-center">
    <%= paginate notifications %>
  </div>
<% else %>
  <div class="d-flex justify-content-center align-items-center">
    <p>通知はありません</p>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <%= paginate notifications %>
  </div>
<% end %>

